@{
    ViewBag.Title = "QuanLyDD";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
@using QLtour.Models
@model List<DIEMTHAMQUAN>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<h2>Quản lý địa điểm du lịch</h2>
<a href="/Home/ThemDD"><input type="button" value="Thêm địa danh" class="bg-info" /></a>
<div class="container">
    <div class="row">
        <table class="table-hover">
            <tr>
                <th>Mã địa danh</th>
                <th>Tên địa danh</th>
                <th>Địa chỉ</th>
                <th>Hình ảnh</th>
                <th>Đặc trưng</th>
            </tr>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.MaDiaDanh</td>
                    <td>@s.TenDiaDanh</td>
                    <td>@s.Diachi</td>
                    <td><img src="/HinhAnhDD/@s.HinhAnh" width="100px" height="150px" /></td>
                    <td>@s.DacTrung</td>
                    <td>
                        @Html.ActionLink("Sửa", "SuaDD", new { id = s.MaDiaDanh }) |
                        @Html.ActionLink("Xoá", "Xoa", new { id = s.MaDiaDanh })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

