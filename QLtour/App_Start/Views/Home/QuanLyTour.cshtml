@{
    ViewBag.Title = "QuanLyTour";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
@using QLtour.Models
@model List<TOUR>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<h2>Quản lý tour du lịch</h2>
<a href="/Home/ThemTour"><input type="button" value="Thêm tour" class="bg-info" /></a>
<div class="container">
        <table class="table-hover">
            <tr class="text-center">
                <th class="p-1">Mã tour</th>
                <th class="p-1">Ngày bắt đầu</th>
                <th class="p-1">Ngày kết thúc</th>
                <th class="p-1">Điểm xuất phát</th>
                <th class="p-1">Chi phí đầu người</th>
                <th class="p-1">SL còn</th>
                <th class="p-1">SL book</th>
                <th class="p-1">Tình trạng</th>
                <th class="p-1">Mã hương dẫn viên</th>
                <th class="p-1">Mã địa danh</th>
            </tr>
            @foreach (var s in Model)
            {
                <tr class="text-center">
                    <td class="p-1">@s.MaTour</td>
                    <td class="p-1">@s.NgayBD</td>
                    <td class="p-1">@s.NgayKT</td>
                    <td class="p-1">@s.DiemXuatPhat</td>
                    <td class="p-1">@s.ChiPhiDauNguoi</td>
                    <td class="p-1">@s.SoLuongCon</td>
                    <td class="p-1">@s.SoLuongBook</td>
                    <td class="p-1">@s.TinhTrang</td>
                    <td class="p-1">@s.MaHDV</td>
                    <td class="p-1">@s.MaDiaDanh</td>
                    <td class="p-1">
                        @Html.ActionLink("Sửa", "SuaTour", new { id = s.MaDiaDanh }) |
                        @Html.ActionLink("Xoá", "XoaTour", new { id = s.MaDiaDanh })
                    </td>
                </tr>
            }
        </table>
</div>
