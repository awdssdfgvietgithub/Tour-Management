@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@using QLtour.Models
@model List<DIEMTHAMQUAN>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<div class="container-fluid">
    <div class="row text-center">
        <h2 style="text-align:center" class="mt-3 mb-3">DANH SÁCH ĐIỂM THAM QUAN</h2>
    </div>
    <div class="row  product-group ">
        @foreach (var s in Model)
        {
            <div class="col-4 col-sm-3 col-md-3 p-2 ">
                <div class="card h-100 text-center card-group border-secondary" style="border: 4px solid">
                    <img class=" card-img-top text-center h-50 w-100 " src="/HinhAnhDD/@s.HinhAnh" />
                    <div class="card-body">
                        <p class="card-title">@s.TenDiaDanh</p>
                        <a href="/Home/XemChiTiet_DiaDanh/@s.MaDiaDanh"> Xem Chi Tiết </a>
                        <a href="/Home/ChonMua/@s.MaDiaDanh"> Chọn mua </a>
                    </div>
                </div>
            </div>
            <br />
        }
    </div>
    <div class="row">
        <a href="/Home/QuanLyDD"><input type="button" value="Quản lý" /></a>
    </div>
</div>
